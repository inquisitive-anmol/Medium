<%-include('../partials/header')%>
<%-include('../partials/navbar')%>


    <div class="home">
        <section class="home-txt">
            <h1>Stay curious.</h1>
            <p>Discover stories, thinking, and expertise <br> from writers on any topic.</p>
            <button type="button">Start Reading</button>
        </section>
        
        
    </div>

    <div id="trend-spl">
        <span id="trend-icon" class="material-symbols-outlined">
            trending_up
            </span>
            <p>Trending on Medium</p>
    </div>
    

    <div class="trending">
        
        <%for(let item of trends){%>
            <div class="trend-card">
                <h1><%=item.index%></h1>
                <section>
                    <p><%=item.name%></p>
                    <h4><%=item.text%></h4>
                    <p class="p2"><%=item.details%></p>
                </section>
            </div>
        <%}%>
     
    </div>

  <hr style="margin-top: 160px; background-color: lightgray; height: 1px; border: none;" >

    <div class="wall">
        <div class="posts">

            <%for(let item of blogs){%>
                <div class="post">
                    <div class="names">
                        <img class="names-img" src="data:image/png;base64," alt="">
                        &nbsp;&nbsp;<h5 style="display: inline;"><%=item.name%></h5>&nbsp;
                        <%if(item.org != ''){%>
                            <h5>in <%=item.org%></h5>
                        <%}%>
                    </div>
                    <div class="post-txt">
                        <h2><a href="/blogs/<%=item._id%>" class="blogs-anchor"><%=item.headline%></a></h2>
                        <p><%=item.text%></p>    
                        <div class="post-footer">
                            <p><%=item.date%></p>&nbsp;
                                <span class="mini-btn">Leadership </span>&nbsp;
                                <!-- <span   class="material-symbols-outlined saved">
                                    bookmark_add
                                    </span> -->
                                    <%if(currentUser){%>

                                        <i class="fa-solid fa-thumbs-up" style="color: #000000;" blogID="<%=item._id%>"></i>
                                        <span style="height: 20px;  max-width: fit-content;gap: 5px; display: flex; justify-content: space-evenly; align-items: center;">
                                            <p>&nbsp;<%=item.likes.length%></p>
                                        </span> 
                                        <%if(currentUser.saved.includes(item._id)){%>
                                        <i  blogID="<%=item._id%>" class="fa-solid fa-bookmark saved" style="color: #000000; margin-left: 100px;"></i>
                                        <%} else {%>
                                        <i  blogID="<%=item._id%>" class="fa-regular fa-bookmark saved" style="color: #000000; margin-left: 100px;"></i>
                                        <%}%>
                                    <%} else {%>
                                        <span style="height: 20px; max-width: fit-content;gap: 5px;display: flex; justify-content: space-evenly; align-items: center;">
                                            <i class="fa-solid fa-heart" style="color: #000000;"></i>
                                            <p><%=item.likes.length%></p>
                                        </span> 
                                        <%}%>
                                    
                        </div>
                    </div>
                </div>
                <div class="post-img">
                    <a href="/blogs/<%=item._id%>" class="blogs-anchor"><img class="imageee" src="<%=item.img%>" alt="">
                    </a>
                </div>
            <%}%>
        </div>

        <aside class="more">
            <p>Discover more of what matters to you</p>
    
            <div class="more-grid">
               <div class="morebtns">Programming</div>
               <div class="morebtns">Data Science</div>
               <div class="morebtns">Technology</div>
               <div class="morebtns">Self Improvement</div>
               <div class="morebtns">Writing</div>
               <div class="morebtns">Relationships</div>
               <div class="morebtns">Machine Learning</div>
               <div class="morebtns">Productivity</div>
               <div class="morebtns">Politics</div>
            </div>
            
        
            <a href="" class="more-topics">See more topics</a>
            <br><br>

            <hr class="spcl-hr">

            <div class="footer">
                <div class="sub-footer">
                    <a href="" class="footer-links">Help</a>
                    <a href="" class="footer-links">Status</a>
                    <a href="" class="footer-links">Writers</a>
                    <a href="" class="footer-links">Blog</a>
                    <a href="" class="footer-links">Careers</a>
                </div>
                <div class="sub-footer">
                    <a href="" class="footer-links">Privacy</a>
                    <a href="" class="footer-links">Terms</a>
                    <a href="" class="footer-links">About</a>
                    <a href="" class="footer-links">Text to speech</a>           
                </div>
            </div>
        </aside>

            
        

    </div>

    <script src="../js/index.js"></script>
<%-include('../partials/footer')%>
